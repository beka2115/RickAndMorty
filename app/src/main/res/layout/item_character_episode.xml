<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="18dp"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_number"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/green"
        android:insetTop="0dp"
        android:layout_marginBottom="4dp"
        android:insetBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/round_button" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="Pilot"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:ellipsize="end"
        android:layout_marginEnd="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_air_date"
        app:layout_constraintStart_toEndOf="@id/btn_number"
        app:layout_constraintTop_toTopOf="@+id/btn_number" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_air_date"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="December 2, 2023"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_number"
        app:layout_constraintStart_toEndOf="@id/btn_number"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_num"
        app:layout_constraintStart_toStartOf="@id/btn_number"
        app:layout_constraintEnd_toEndOf="@id/btn_number"
        app:layout_constraintTop_toTopOf="@id/btn_number"
        app:layout_constraintBottom_toBottomOf="@id/btn_number"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:elevation="4dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>